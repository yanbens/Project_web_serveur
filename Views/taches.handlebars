<div class="container">
    <h2 class="text-center">Liste des Tâches</h2>

    <ul class="tasks">
        {{#each taches}}
        <li>
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <p>Priorité : <strong>{{this.priority.description}}</strong></p>
            <p>Statut : <strong>{{this.status.description}}</strong></p>
            <p>Échéance : {{this.dueDate}}</p>

            <a href="/edit/{{this.id}}" class="btn-edit">Modifier</a>
            <form action="/api/taches/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn-delete">Supprimer</button>
            </form>
        </li>
        {{/each}}
    </ul>

    <a href="/creer_Tache" class="btn-add">Ajouter une tâche</a>
</div>
