<section class="auth-container">
    <h2>Créer un compte</h2>

    <form action="/inscription" method="POST" class="form-authentification">
        <label for="nom">Nom</label>
        <input type="text" id="nom" name="nom" placeholder="Votre nom complet" required />

        <label for="email">Courriel</label>
        <input type="email" id="email" name="email" placeholder="Entrez votre email" required />

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" placeholder="Créer un mot de passe" required />

        <input type="submit" value="S’inscrire" class="btn-primary" />
    </form>
</section>
